<!DOCTYPE html>
<html>

<head>
  <title>#(pageTitle)</title>
  #if(meta):
    <meta property="og:title" content="#(pageTitle)">
    <meta property="og:url" content="#(pageURL)">
    <meta property="og:description" content="#(meta.pageDescription)">
    <meta property="og:image" content="#(meta.pageImage)">
    <meta property="og:site_name" content="#(siteInfo.name)">
    #if(title):
      <meta property="og:type" content="artcle">
    #else:
      <meta property="og:type" content="website">
    #endif
    #if(meta.twitter):
      <meta name="twitter:card" content="summary">
      <meta name="twitter:image:alt" content="#(meta.twitter.imageAlt)">
      <meta name="twitter:site" content="#(meta.twitter.username)">
    #endif
  #endif
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css" integrity="sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w" crossorigin="anonymous">
  <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/grids-responsive-min.css">
  <link rel="stylesheet" href="#(root)/styles/style.css">
  #if(favicon):
    <link rel="icon" href="#(favicon)">
  #endif
  #import("resources")
</head>

<body>

  <header>
    <a id="site-title" class="no-decoration" href="/">#(siteInfo.name)</a>
    <div id="site-description">#(siteInfo.description)</div>
  </header>

  <main class="pure-g">

    <div id="content" class="pure-u-1 pure-u-lg-3-4">
      #import("content")
    </div>

    <div id="content-menu" class="pure-u-1 pure-u-lg-1-4">

      <div class="pure-menu">
        #if(count(staticContents) != 0):
          <div id="menu-subcontents">
            <div class="menu-subcontents-header">Site Contents</div>
            #for(staticContent in staticContents):
              <div class="menu-subcontents-item">
                <a class="no-decoration" href="/posts/#(staticContent.id)">#(staticContent.title)</a>
              </div>
            #endfor
          </div>
        #endif
        
        #if(count(recentPosts) != 0):
          <div id="menu-subcontents">
            <div class="menu-subcontents-header">Recent Posts</div>
            #for(post in recentPosts):
              <div class="menu-subcontents-item">
                <a class="no-decoration" href="/posts/#(post.id)">#(post.title)</a>
              </div>
            #endfor
          </div>
        #endif

        #if(count(allCategories) != 0):
          <div id="menu-subcontents">
            <div class="menu-subcontents-header">Category</div>
            #for(category in allCategories):
              <div class="menu-subcontents-item">
                <a class="no-decoration" href="/categories/#(category.category.id)/posts">#(category.category.name) (#(category.count))</a>
              </div>
            #endfor
          </div>
        #endif
        
        #if(count(allTags) != 0):
          <div id="menu-subcontents">
            <div class="menu-subcontents-header">Tag</div>
            #for(tag in allTags):
              <div class="menu-subcontents-item">
                <a class="no-decoration" href="/tags/#(tag.tag.id)/posts">#(tag.tag.name) (#(tag.count))</a>
              </div>
            #endfor
          </div>
        #endif

      </div>
    </div>

  </main>

</body>

</html>
