<!DOCTYPE html>
<html>

<head>
  <title>#(page_title)</title>
  #embed("embeds/resources")
  #embed("embeds/meta")
</head>

<body>

  <div id="content">
    #import("content")
  </div>

  <div id="toggle-menu">
    <div id="toggle-menu-container">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <div id="menu">

    <div class="pure-menu">
      <div class="pure-menu-heading">
        #if(site_info) {
          <a href="/"><div id="menu-header-site-name">#(site_info.name)</div></a>
          <div id="menu-header-site-description">#(site_info.description)</div>
        } ##else() {
          <div id="menu-header-site-name">SITETITLE</div>
        }
      </div>
    </div>
  </div>

</body>

</html>
