<!DOCTYPE html>
<html>

<head>
  <title>#(page_title)</title>
  #embed("embeds/resources")
  #embed("embeds/meta")
</head>

<body>

  <div id="content">
    #import("content")
  </div>

  <div id="toggle-menu">
    <div id="toggle-menu-container">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <div id="menu">

    <div class="pure-menu">
      <div class="pure-menu-heading">
        <a href="/"><div id="menu-header-site-name">#(site_info.name)</div></a>
        <div id="menu-header-site-description">#(site_info.description)</div>
      </div>
      <div id="menu-subcontents">
        #if(recently_posts) {
          <div class="menu-subcontents-header">Recently Posts</div>
          #loop(recently_posts, "post") {
            <div class="menu-subcontents-item">
              <a class="title-link" href="/posts/#(post.id)">#(post.title)</a>
            </div>
          }
        }
      </div>
    </div>
  </div>

</body>

</html>
