<!DOCTYPE html>
<html>

<head>
  <title>#(page_title)</title>
  #embed("embeds/resources")
  #embed("embeds/meta")
</head>

<body>

  <div id="content">
    #import("content")
  </div>

  <div id="toggle-menu">
    <div id="toggle-menu-container">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <div id="menu">

    <div class="pure-menu">
      <div class="pure-menu-heading">Dashboard</div>
      <ul class="pure-menu-list">
        <li class="pure-menu-item #equal(menu_type, "new_posts") { pure-menu-selected }">
          <a class="pure-menu-link" href="/admin/posts/create">NewPost</a>
        </li>
        <li class="pure-menu-item #equal(menu_type, "posts") { pure-menu-selected }">
          <a class="pure-menu-link" href="/admin/posts">Posts</a>
        </li>
        <li class="pure-menu-item #equal(menu_type, "static_content") { pure-menu-selected }">
          <a class="pure-menu-link" href="/admin/static-contents">StaticContent</a>
        </li>
        <li class="pure-menu-item #equal(menu_type, "tags") { pure-menu-selected }">
          <a class="pure-menu-link" href="/admin/tags">Tags</a>
        </li>
        <li class="pure-menu-item #equal(menu_type, "categories") { pure-menu-selected }">
          <a class="pure-menu-link" href="/admin/categories">Categories</a>
        </li>
        <li class="pure-menu-item #equal(menu_type, "images") { pure-menu-selected }">
          <a class="pure-menu-link" href="/admin/images">Images</a>
        </li>
        <li class="pure-menu-item #equal(menu_type, "site_info") { pure-menu-selected }">
          <a class="pure-menu-link" href="/admin/siteinfo/edit">SiteInfo</a>
        </li>
        <li class="pure-menu-item #equal(menu_type, "user") { pure-menu-selected }">
          <a class="pure-menu-link" href="/admin/user/edit">UserSetting</a>
        </li>
        <li class="pure-menu-item">
          <a class="pure-menu-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </div>

</body>

</html>
