<!DOCTYPE html>
<html>

<head>
  <title>Login</title>
  #embed("embeds/resources")
  #embed("embeds/meta")

  <link href="/styles/login.css" rel="stylesheet">
</head>

<body>

  <div id="login-form">

    <form class="pure-form">

      <div class="field-error">error message</div>

      <fieldset class="pure-group">
        <div class="login-form-label">
          <label for="name">ID</label>
        </div>
        <input id="name" class="pure-input-1" type="text" placeholder="ID">
        <div class="login-form-label">
          <label for="password">Password</label>
        </div>
        <input id="password" class="pure-input-1" type="password" placeholder="Password">
      </fieldset>
      <button type="submit" class="pure-button pure-input-1 pure-button-primary">Login</button>
    </form>
  </div>

</body>

</html>
